{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "lib": ["ESNext"],
        "moduleResolution": "nodenext",
        "outDir": "./lib",
        "types": ["node", "./types/index.d.ts"],
        "strictNullChecks": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "noUnusedParameters": true
    },
    "exclude": ["node_modules", "**/node_modules/*", "test", "vitest.config.ts"]
}
