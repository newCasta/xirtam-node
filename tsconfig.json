{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "lib": ["ESNext"],
        "moduleResolution": "nodenext",
        "outDir": "./lib",
        "types": ["node"],
        "strictNullChecks": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "noUnusedParameters": true
    },
    "include": ["src", "**/*/*.d.ts"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
